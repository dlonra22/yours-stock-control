<div class="container">
   <div class="col-md-8 col-md-offset-2">
    <h2>Edit My Profile</h2>
    <form method="post" action="/users/:id/">
      <p><label for="username">Username:</label>
      <input type="Text" name="username" id="username" value=<%=@user.username%>></p>
      
      <p><label for="name">Full Name:</label>
      <input type="Text" name="name" id="name"  value=<%=@user.name%> ></p>
      
      <p><label for="password">Password:</label>
      <input type="password" name="password" id="password"  value=<%=@user.password%> ></p>
      
      <p><label for="password_confirmation">Confirm Your Password:</label>
      <input type="password" name="password_confirmation" id="password_confirmation"  value=<%=@user.password_confirmation%> ></p>
    
      <p><label for="is_admin">Is an Admin?:</label>
      <input name="is_admin" id="is_admin" type="checkbox" disabled checked="<%=@user.is_admin%>">/>
      <%if @user.is_admin%>
          <%val = 1%>
      <%else%>
          <%val = 0%>
      <%end%>
      <input type="hidden" name="is_admin" id="is_admin" value="<%=val%>"/></p>
      <input type="submit" value="Create New User">
      </form>
    
</div>
